page {
  background-color: #f5f5f8;
}
.topblock {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 50rpx;
}
.topblock .one {
  font-size: 60rpx;
  font-weight: bold;
}
.topblock .two {
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  text-decoration: line-through;
}
.topblock .three {
  font-size: 30rpx;
}
.youhuijuan {
  padding: 32rpx;
  box-sizing: border-box;
  width: 686rpx;
  margin: 0 auto;
  margin-top: 32rpx;
  border-radius: 16rpx;
  background-color: white;
}
.youhuijuantitle {
  font-size: 28rpx;
  display: flex;
  align-items: center;
  color: #999999;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.centerblock {
  width: 94%;
  margin: 0 auto;
  background-color: white;
  border-radius: 40rpx;
  padding: 30rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}
.centertopline {
  font-size: 28rpx;
  color: #aaa;
  border-bottom: 1rpx solid #f1f1f1;
  padding-bottom: 20rpx;
}
.centerpayway .item {
  padding: 40rpx 0;

  display: flex;
  justify-content: space-between;
  align-items: center;
}
.centerpayway .subtitle {
  background-color: #fff2dc;
  border-radius: 10rpx;
  padding: 5rpx 20rpx;
  font-size: 24rpx;
  color: #e99812;
  margin-top: 10rpx;
}
.subtitleyouhuijuan {
  display: flex;
  padding: 32rpx 0;
  padding-bottom: 0;
  justify-content: space-between;
}
.subtitleyouhuijuan .money {
  color: #e99916;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.subtitleyouhuijuan .name {
  color: #666666;
  font-size: 30rpx;
}
.centerpayway .subtitle2 {
  font-size: 24rpx;
  color: #666666;
}
.centerpayway .item .img {
  margin-right: 25rpx;
}
.centerpayway .item .title {
  font-size: 30rpx;
  font-weight: bold;
  color: #666666;
}
.centerpayway .yuepay {
  border-top: 1rpx solid #f1f1f1;
}
.centerpayway .displeynone {
  opacity: 0.5;
}
.roundpay {
  width: 38rpx;
  height: 38rpx;
  opacity: 0.6;
  border-radius: 38rpx;
  border: 3rpx solid #cccccc;
}
.payBtn {
  width: 686rpx;
  height: 100rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  background: linear-gradient(270deg, #41beff 0%, #1a6eff 100%);
  box-shadow: 0rpx 4rpx 6rpx 0rpx rgba(27, 112, 255, 0.25);
  border-radius: 50rpx;
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translate(-50%, -50%);
}
.bottomBar .top {
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  width: 70%;
  justify-content: space-between;
}
.bottomBar .content {
  overflow-y: scroll;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 20rpx;
}
.bottomBar .content .item {
  width: 686rpx;
  height: 146rpx;
  background-color: #fffaf1;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.bottomBar .content .item .nouse {
  color: #666666;
  font-size: 32rpx;
  padding-left: 44rpx;
}
.right_right {
  margin-right: 20rpx;
}
.bottomBar .content .item .left {
  width: 242rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.bottomBar .content .item .left .money {
  font-size: 46rpx;
  color: #e99812;
  font-weight: bold;
}
.bottomBar .content .item .left .submoney {
  font-size: 22rpx;
  color: #e99812;
}
.counp_right_content {
  width: 444rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  align-items: center;
  height: 100%;
  display: flex;
  justify-content: space-between;
}
.bottomBar .content .item .right {
  height: 100%;
  text-align: left;
}
.bottomBar .content .item .right .title {
  font-size: 32rpx;
  color: #666666;
  font-weight: 500;
}
.bottomBar .content .item .right .time {
  font-size: 24rpx;
  color: #666666;
}
