page{
    background-color:#F6F6F8;
}
.announcement{

}
.announcement .item{
    width: 686rpx;
    margin: 32rpx auto;
    border-radius: 20rpx;
    background-color: white;
    padding: 32rpx;
    box-sizing: border-box;
    padding-bottom: 32rpx;
    

}
.announcement .item .toptitle{
    color: #333333;
    font-size: 32rpx;
    font-weight: bold;
    padding-bottom: 32rpx;
    border-bottom: 1rpx solid #DDDDDD;

}
.noannouncement{
    width: 100%;
    height: 300rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    color: #999;

}
.announcement .item .bodyconent{
    color: #999999;
    margin-bottom: 20rpx;
    margin-top: 20rpx;
    font-size: 28rpx;
    word-break        : break-all;
    text-overflow     : ellipsis;
    overflow          : hidden;
    display           : -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.announcement .item  .time{
    color: #999999;
    font-size: 24rpx;
    justify-content: space-between;
    display: flex;
}
.announcement .item .right{
    color: #166CFF;
    font-size: 24rpx;

}
