.pagecont {
  margin: 0 auto;
  width: 92%;
}

.pagecont .balance {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  width: 100%;
  height: 360rpx;
  margin-top: 32rpx;
}

.pagecont .balance image {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.pagecont .balance .money {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 0;
  margin: auto auto;
  width: 135rpx;
  height: 113rpx;
  text-align: center;
  color: #fff;
  font: 600 28rpx "PingFangSC-Medium";
  line-height: 80rpx;
}

.pagecont .balance .bottomLine {
  display: flex;
  color: #fff;
  padding-left: 35rpx;
}

.pagecont .balance .bottomLine .text {
  font-size: 22rpx;
  margin-bottom: 8rpx;
  opacity: 0.7;
}

.pagecont .balance .bottomLine .val {}

.pagecont .balance .bottomLine .left {
  margin-right: 94rpx;
}

.pagecont .balance .bottomLine .right {}

.pagecont .balance .wrap {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  margin: 0 0 40rpx 32rpx;
}

.pagecont .balance .wrap text:nth-child(1) {
  color: #fff;
  font: 500 28rpx "PingFangSC-Medium";
}

.pagecont .balance .wrap text:nth-child(2) {
  margin-top: 16rpx;
  color: #fff;
  font: 500 56rpx "PingFangSC-Medium";
}

.pagecont .balanceNote {
  margin: 24rpx auto 32rpx;
  width: 96%;
  font-size: 28rpx;
  color: #999;
}

.pagecont .balanceItem {
  margin: 0 auto;
  width: 96%;
}

.pagecont .balanceItem .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.pagecont .balanceItem .item .left {
  display: flex;
  align-items: center;
}

.pagecont .balanceItem .item .left image {
  margin-right: 16rpx;
  width: 32rpx;
  height: 32rpx;
}

.pagecont .balanceItem .item .left text {
  color: #333;
  font: 500 30rpx "PingFangSC-Medium";
}

.pagecont .balanceItem .item .right {
  display: flex;
  align-items: center;
}

.pagecont .balanceItem .item .right image {
  width: 32rpx;
  height: 32rpx;
}

.pagecont .balanceItem .item .right text {
  margin-right: 19rpx;
  color: #999;
  font: 500 30rpx "PingFangSC-Medium";
}

.tixian_btn {
  width: 686rpx;
  height: 100rpx;
  background: linear-gradient(270deg, #41BEFF 0%, #1A6EFF 100%);
  box-shadow: 0rpx 4rpx 6rpx 0rpx rgba(27, 112, 255, 0.25);
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  position: fixed;
  left: 50%;
  bottom: 0;
  transform: translate(-50%,-50%);
}