page {
  width: 100%;
}

.pageCont {
  width: 100%;
}

.pageCont .formCont {
  width: 100%;
}

.cont {
  width: 100%;
  margin: 0 auto;
}

.cont .options {
  width: 90%;
  height: 390rpx;
  margin: 32rpx auto 0;
  border-radius: 4rpx;
  background: #f5f5f5;
}

.cont .options .topLine {
  width: 100%;
  height: 32rpx;
}

.cont .options .textareaCont {
  width: 90%;
  height: 290rpx;
  margin: 0rpx auto;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(178, 178, 178, 1);
}

.cont .options .textareaCont textarea {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #111;
}

.cont .options .wordLimit {
  width: 90%;
  margin: 0 auto;
  text-align: right;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(178, 178, 178, 1);
}

.imgCont {
  width: 95%;
  padding: 30rpx 0;
  background: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.imgCont .upload {
  margin-left: 40rpx;
  width: 30%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.imgCont .upload .delect {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0rpx;
  right: 10rpx;
}

.imgCont .upload image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 15rpx;
}

.hasPic {
  width: 100% !important;
}

.fromBtn {
  position: fixed;
  bottom: 32rpx;
  left: 0rpx;
  right: 0rpx;
  margin: 0 auto;
  height: 100rpx;
  width: 90%;
}

.fromBtn button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100% !important;
  height: 100rpx;
  color: #fff;
  font: 500 32rpx "PingFangSC-Medium";
  border-radius: 50rpx;
  background: linear-gradient(to right, #1a6eff 0%, #41beff 100%) !important;
}

.opacity4 {
  opacity: 0.4;
}

.opacity10 {
  opacity: 1;
}
