page {
  width: 100%;
  background: #F6F6F8;
}

.pageCont {
  width: 100%;
}

.pageCont .coinsCont {
  padding-top: 32rpx;
  width: 100%;
  height: 344rpx;
  background: #fff;
}

.pageCont .coinsCont .wrapC {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  width: 90%;
  height: 280rpx;
  margin: 0 auto;
}

.pageCont .coinsCont .wrapC image {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 0;
  width: 100%;
  height: 100%;
  border-radius: 8px;
}

.pageCont .coinsCont .wrapC .leftCont {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
  z-index: 1;
  width: 90%;
  margin: 32rpx 0 0 32rpx;
  color: #fff;
}

.pageCont .coinsCont .wrapC .leftCont text:nth-child(1) {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  opacity: 0.7;
}

.pageCont .coinsCont .wrapC .leftCont text:nth-child(2) {
  font: 500 56rpx "PingFangSC-Medium";
}

.pageCont .depositNote {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  width: 90%;
  margin: 24rpx auto;
}

.pageCont .depositNote image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.pageCont .depositNote text {
  display: inline-block;
  width: 93%;
  color: #999;
  font: 500 28rpx "PingFangSC-Medium";
}

.pageCont .depositNoteBot {
  position: fixed;
  left: 0;
  bottom: 64rpx;
  width: 100%;
  text-align: center;
  color: #166CFF;
  font-size: 28rpx;
}


.pageCont .quitCont {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100%;
  height: 496rpx;
  background: #fff;
}

.pageCont .quitCont image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 56rpx;
}

.pageCont .quitCont text:nth-child(2) {
  margin-bottom: 32rpx;
  color: #333;
  font: 500 32rpx "PingFangSC-Medium";
}

.pageCont .quitCont text:nth-child(3) {
  color: #999;
  font-size: 28rpx;
}