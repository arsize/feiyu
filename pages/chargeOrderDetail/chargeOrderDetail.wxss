page {
  background-color: #f5f5f5;
}
.detail {
  width: 100%;
  position: relative;
}
.detail .detailTop {
  width: 100%;
  height: 460rpx;
  background-color: #1a6eff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.detail .statusBar {
  width: 686rpx;
  position: absolute;
  top: 289rpx;
  left: 50%;
  background-color: white;
  transform: translate(-50%, 0);
  height:500rpx;
  border-radius: 16rpx;
  padding: 28rpx;
  box-sizing: border-box;
}
.detail .statusBar .line {
  width: 100%;
  color: #999999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.detail .statusBar .line .leftblock {
  width: 8rpx;
  height: 24rpx;
  border-radius: 4rpx;
  background-color: #1a6eff;
  margin-right: 12rpx;
}
.detail .statusBar .statusPort {
  width: 100%;
  display: flex;
  align-items: flex-end;
  color: #0ec01d;
  justify-content: center;
  padding-top: 45rpx;
  font-weight: bold;
}
.detail .statusBar .statusPort .port {
  font-size: 120rpx;
  font-weight: bold;
  color: #0ec01d;
  line-height: 120rpx;
}
.blocklist {
  width: 606rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fafafa;
  margin: 0 auto;
  margin-top: 28rpx;
}
.blocklist .item {
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.blocklist .item .title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}
.blocklist .item .subtitle {
  font-size: 24rpx;
  color: #999999;
}
.blocklist .item1 {
  padding: 0 10rpx;
  box-shadow: 2rpx 0rpx 0rpx 0rpx #dddddd;
}
.blocklist .item2 {
  padding: 0 10rpx;
  box-shadow: 2rpx 0rpx 0rpx 0rpx #dddddd;
}
.bottomTime {
  position: absolute;
  bottom: 160rpx;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #166cff;
  font-size: 28rpx;
}
.bottomBarBlock{
  width     :686rpx;
height    :100rpx;
background:linear-gradient(270deg, rgba(65, 190, 255, 1) 0%, rgba(26, 110, 255, 1) 100%);
box-shadow:0rpx 4rpx 6rpx 0rpx rgba(27, 112, 255, 0.25);
border-radius:50rpx;
color: white;
font-size: 32rpx;
display: flex;
justify-content: center;
align-items: center;
position: absolute;
left: 50%;
transform: translate(-50%,-50%);
bottom: 10rpx;
}
.exchangelog{
  border-radius:16rpx;
  width: 686rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%,-50%);
  bottom: 185rpx;
}