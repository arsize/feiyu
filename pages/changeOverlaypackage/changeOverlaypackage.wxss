.pageCont {
  padding-top: 40rpx;
  width: 100%;
}
.comboItems {
  position: relative;
  width: 686rpx;
  box-sizing: border-box;
  height: 180rpx;
  border-radius: 18rpx;
  background-color: white;
  margin: 0 auto;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  padding: 32rpx;
  border: 4rpx solid transparent;
}
.comboItems .centline {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.centerleft {
  display: flex;
  align-items: center;
}
.bottomsub {
  position: absolute;
  bottom: 27rpx;
  right: 35rpx;
  font-size: 24rpx;
  color: #999999;
  text-decoration: line-through;
}
.viewMore {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}
.botBtmFixLinenow {
  width: 100%;
  height: 230rpx;
}
.topbotBtmFixSig {
  position: fixed;
  bottom: 112rpx;
  width: 100%;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.85);
  font-size: 26rpx;
  color: white;
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx;
  box-sizing: border-box;
}
.viewMore text {
  margin-right: 9rpx;
  color: #166cff;
  font: 500 28rpx "PingFangSC-Medium";
}

.viewMore image {
  width: 24rpx;
  height: 24rpx;
}

.centerleft .name {
  font-size: 36rpx;
  color: #333333;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
}
.centerleft .rightblocks {
  width: 124rpx;
  height: 40rpx;
  border-radius: 6rpx;
