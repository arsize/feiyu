page {
  width: 100%;
  height: 100%;
}
.pageCont {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  height: 100%;
}
.pageCont .sideBar {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
  /* width: 180rpx; */
  width: 24%;
  height: 100%;
  background: #F6F6F8;
}
.pageCont .sideBar .item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 88rpx;
}
.pageCont .sideBar .item.active {
  background: #fff;
}
.pageCont .sideBar .item text {
  display: inline-block;
  width: 100%;
  height: 42rpx;
  text-align: center;
  box-sizing: content-box;
  color: #333;
  font: 500 28rpx "PingFangSC-Medium";
}
.pageCont .sideBar .item text.active {
  color: #1A6EFF;
  border-left: 4rpx solid #1A6EFF;
  background: #fff;
}
.pageCont .storeCont {
  width: 76%;
  height: 100%;
}
.pageCont .storeCont .item {
  width: 100%;
  margin: 0 auto 24rpx;
  padding: 26rpx 0 25rpx 0;
  border-radius: 6rpx;
  border-bottom: 1rpx solid #eee;
  /* background: #E6EFFF; */
}

.pageCont .storeCont .active {
  background: #E6EFFF;
}


.pageCont .storeCont .item .top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin: 0rpx auto 0;
}
.pageCont .storeCont .item .top text:nth-child(1) {
  display: inline-block;
  width: 72%;
  color: #333;
  font: 500 32rpx "PingFangSC-Medium";
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.pageCont .storeCont .item .top text:nth-child(2) {
  padding-left: 32rpx;
  border-left: 1rpx solid #eee;
  color: #999;
  font: 500 28rpx "PingFangSC-Medium";
}
.pageCont .storeCont .item .middle {
  width: 90%;
  margin: 10rpx auto 0;
  color: #999;
  font-size: 28rpx;
}
.pageCont .storeCont .item .bottom {
  width: 90%;
  margin: 26rpx auto 0;
}
.pageCont .storeCont .item .bottom .leftCont {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;
  color: #666;
  font-size: 20rpx;
}
.pageCont .storeCont .item .bottom .leftCont text {
  margin: 0 16rpx 16rpx 0;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  /* background: #F2F2F2; */
  background:rgba(0,0,0,.1);
}
.pageCont .storeCont .item .bottom .rightCont {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.pageCont .storeCont .item .bottom .rightCont view text {
  margin-right: 10rpx;
  color: #1A6EFF;
  font: 500 28rpx "PingFangSC-Medium";
}
.pageCont .storeCont .item .bottom .rightCont view image {
  width: 24rpx;
  height: 24rpx;
}
.pageCont .storeCont .item .bottom .rightCont view:nth-child(1) {
  margin-right: 40rpx;
}
