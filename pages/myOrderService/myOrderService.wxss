/* pages/myOrderService/myOrderService.wxss */
@import '../myReturnbat/myReturnbat.wxss';

.myReturnbatStore .wrap {
  padding: 50rpx 0 0rpx 0;

}

.viewOther {
  width: 100%;
  text-align: right;
  color: #1a6eff;
  font: 500 28rpx "PingFangSC-Medium";
}

.titleNote {
  position: absolute;
  left: 0;
  top: -10rpx;
  width: 184rpx;
  height: 48rpx;

}

.titleNote image {
  width: 184rpx;
  height: 48rpx;
}

.titleNote text {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  color: #fff;
  font: 500 24rpx "PingFangSC-Medium";
  text-align: center;
  line-height: 48rpx;
}

.myReturnbatStore .wrap .bottomOrder {
  display: flex;
  justify-content: flex-start;
  /* align-items: flex-start; */
  align-items: center;
  width: 100%;
  height: 88rpx;
  margin: 34rpx auto 0;
  background: #FCFCFC;
  border-bottom-left-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
}

.myReturnbatStore .wrap .bottomOrder .leftCont {
  display: flex;
  justify-content: flex-start;
  /* align-items: flex-start; */
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 32rpx;
  width: 100%;
  color: #999;
  font: 500 22rpx "PingFangSC-Medium";
}

.myReturnbatStore .wrap .bottomOrder .leftCont text {
  display: inline-block;
  width: 120rpx;
  height: 48rpx;
  margin: 0 16rpx 0rpx 0;
  /* padding: 4rpx 8rpx; */
  text-align: center;
  line-height: 48rpx;
  border-radius: 4rpx;
  background: #F5F5F5;
}

.myReturnbatStore .wrap .bottomOrder .bottomOrderCont {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  border-bottom-left-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
  /* margin-top: 40rpx; */
}

.myReturnbatStore .wrap .bottomOrder .bottomOrderCont view {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 48%;
}

.myReturnbatStore .wrap .bottomOrder .bottomOrderCont view text {
  margin-right: 10rpx;
  color: #1a6eff;
  font: 500 28rpx "PingFangSC-Medium";
}

.myReturnbatStore .wrap .bottomOrder .bottomOrderCont view image {
  width: 24rpx;
  height: 24rpx;
}

.myReturnbatStore .wrap .bottomOrder .bottomOrderCont view:nth-child(1) {
  /* margin-right: 30rpx; */
  border-right: 2rpx solid #EBEBEB;
}